<div class="container">
    <div class="row">
        
        <div class="main col-xs-12 col-sm-9 col-lg-9 col-md-9 ">           
            <instructionBlock></instructionBlock>
        </div>
        <div class="sidebar col-xs-3 hidden-xs" style=" padding: 20px;">
            <div class="well">
               <a routerLink="/home/all/{{type}}/{{value}}">{{ 'All' | translate:lang }}</a>
               <a routerLink="/home/popular/{{type}}/{{value}}">{{ 'Popular' | translate:lang }}</a>
            </div>

            <div class="well">
                <a (click)="selectLanguage('en')">English</a>
                <a (click)="selectLanguage('rus')">Русский</a>
            </div>

            <div class="well">
                <p>{{ 'Categories' | translate:lang }}</p>
                <p *ngFor="let item of categories"><a routerLink="/home/all/category/{{item.name}}">{{item.name}}</a></p>
            </div>
            <div class="well">
                <p>{{ 'CloudTag' | translate:lang }}</p>
                <a *ngFor="let tag of tags" routerLink="/home/all/tag/{{tag.name}}">{{tag.name}}  </a>
            </div>
        </div>

    </div>
</div>