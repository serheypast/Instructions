                    <img src="http://res.cloudinary.com/diwv72pih/image/upload/w_930,h_500/v1502053500/1_rgz37s.jpg" alt="Chicago">
                </div>

                <div class="item">
                    <img class="" src="http://res.cloudinary.com/diwv72pih/image/upload/w_930,h_500/v1502054156/635862250218546205-1016468179_Chocolate-Chip-Cookies_wlyrzm.jpg" alt="New York">
                </div>
            </div>

            
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
</div>

